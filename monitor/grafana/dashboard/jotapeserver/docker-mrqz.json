{
  "title": "Docker Engine - MRQZ",
  "uid": "docker-mrqz",
  "tags": ["Docker", "Docker Metrics", "Docker Engine", "Prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "style": "dark",
  "refresh": "15s",
  "editable": true,
  "description": "Painel de Métricas do Docker Engine",

  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],

  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },

  "templating": {
    "list": [
      {
        "name": "container_name",
        "label": "Container",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(container_memory_usage_bytes{image!=\"\",name!=\"\"}, name)",
        "includeAll": true,
        "allValue": ".*",
        "refresh": 1,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },

  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s","10s","15s","30s","1m","5m","15m"] },

  "panels": [
    { "title": "Server", "type": "row", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 } },

    {
      "title": "CPU (%)",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0, "max": 100,
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 70 }, { "color": "red", "value": 90 } ] }
        }
      }
    },

    {
      "title": "Memória",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes)", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "max": 68719476736,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 51539607552 },
              { "color": "red", "value": 60129542144 } ] }
        }
      }
    },

    {
      "title": "Disco Raiz Disponível",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay|squashfs\"} - node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay|squashfs\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "max": 63090503680,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red" },
              { "color": "orange", "value":  6309050368 },
              { "color": "green",  "value": 15772625920 }
            ]
          }
        }
      }
    },

    {
      "title": "Disco Docker Disponível",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "node_filesystem_avail_bytes{mountpoint=\"/var/lib/docker\",fstype!~\"tmpfs|overlay|squashfs\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "max": 449081516032,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red"},
              { "color": "orange", "value":  44908151603 },
              { "color": "green",  "value": 112270379008 }
            ]
          }
        }
      }
    },

    {
      "title": "Tráfego de Rede Recebido [B/s, 5m média]",
      "type": "stat",
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "decimals": 2 } }
    },
    {
      "title": "Tráfego de Rede Enviado [B/s, 5m média]",
      "type": "stat",
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps", "decimals": 2 } }
    },

    { "title": "CPU Containers", "type": "row", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 10 } },

    {
      "title": "CPU [%]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 11 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"$container_name\",name=~\".+\"}[5m])) by (name) * 100", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean","max"], "showLegend": true } }
    },

    { "title": "Memória Containers", "type": "row", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 19 } },

    {
      "title": "Memória Containers",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(container_memory_rss{name=~\"$container_name\",name=~\".+\"}) by (name)", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean","max"], "showLegend": true } }
    },

    {
      "title": "Memória Cached Containers",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(container_memory_cache{name=~\"$container_name\",name=~\".+\"}) by (name)", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean","max"], "showLegend": true } }
    },

    { "title": "Tráfego de Rede por Containers", "type": "row", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 } },

    {
      "title": "Tráfego de Rede Recebido por Containers [B/s, 5m média]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(rate(container_network_receive_bytes_total{name=~\"$container_name\",name=~\".+\"}[5m])) by (name)", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean","max"], "showLegend": true } }
    },

    {
      "title": "Tráfego de Rede Enviado por Containers [B/s, 5m média]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 45 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "sum(rate(container_network_transmit_bytes_total{name=~\"$container_name\",name=~\".+\"}[5m])) by (name)", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean","max"], "showLegend": true } }
    },

    { "title": "Informações dos Containers", "type": "row", "gridPos": { "h": 1, "w": 24, "x": 0, "y": 53 } },

    {
      "title": "Informações dos Containers",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 54 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "time() - container_start_time_seconds{name=~\".+\"}", "format": "table", "instant": true, "legendFormat": "{{name}}", "refId": "A" }
      ],
      "transformations": [
        {
          "id": "filterFieldsByName",
          "options": { "include": { "names": [ "container_label_com_docker_compose_project", "name", "image", "container_label_com_docker_compose_project_working_dir", "Value" ] } }
        },
        {
          "id": "organize",
          "options": {
            "indexByName": { "Value": 0, "container_label_com_docker_compose_project": 1, "name": 2, "image": 3, "container_label_com_docker_compose_project_working_dir": 4 },
            "renameByName": { "container_label_com_docker_compose_project": "Stack", "name": "Container", "image": "Imagem", "Value": "Iniciado", "container_label_com_docker_compose_project_working_dir": "Direrio de Trabalho" }
          }
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 0 }, "overrides": [] },
      "options": { "showHeader": true, "footer": { "show": false } }
    }
  ]
}
