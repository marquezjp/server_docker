{
  "title": "GPU NVIDIA RTX 4070 - MRQZ",
  "uid": "gpu-dcgm-mrqz",
  "tags": ["GPU","NVIDIA","DCGM","AI","Prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "style": "dark",
  "refresh": "10s",
  "editable": true,
  "description": "Painel de Métricas da GPU NVIDIA RTX 4070",

  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],

  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },

  "templating": {
    "list": [
      {
        "name": "gpu",
        "type": "query",
        "label": "GPU",
        "datasource": "${DS_PROMETHEUS}",
        "includeAll": true,
        "query": "label_values(DCGM_FI_DEV_GPU_UTIL, gpu)",
        "refresh": 1,
        "sort": 1,
        "current": { "selected": true, "text": "All", "value": ".*" }
      }
    ]
  },

  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s","10s","15s","30s","1m","5m"] },

  "panels": [
    {
      "title": "GPU Util [%]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_GPU_UTIL{gpu=~\"$gpu\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },

    {
      "title": "De/Para VRAM Util [%]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_MEM_COPY_UTIL{gpu=~\"$gpu\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },

    {
      "title": "VRAM [%]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "100 * DCGM_FI_DEV_FB_USED{gpu=~\"$gpu\"} / (DCGM_FI_DEV_FB_USED{gpu=~\"$gpu\"} + DCGM_FI_DEV_FB_FREE{gpu=~\"$gpu\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 95 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },

    {
      "title": "Temperatura [°C]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_GPU_TEMP{gpu=~\"$gpu\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius", "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 65 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },

    {
      "title": "Utilização (GPU e De/Para VRAM)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_GPU_UTIL{gpu=~\"$gpu\"}", "legendFormat": "GPU {{gpu}}", "refId": "A" },
        { "expr": "DCGM_FI_DEV_MEM_COPY_UTIL{gpu=~\"$gpu\"}", "legendFormat": "De/Para VRAM {{gpu}}", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "VRAM Usada vs Total",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_FB_USED{gpu=~\"$gpu\"}", "legendFormat": "Usada {{gpu}}", "refId": "A" },
        { "expr": "DCGM_FI_DEV_FB_USED{gpu=~\"$gpu\"} + DCGM_FI_DEV_FB_FREE{gpu=~\"$gpu\"}", "legendFormat": "Total {{gpu}}", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "title": "GPU Consumo [W]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "DCGM_FI_DEV_POWER_USAGE{gpu=~\"$gpu\"}", "legendFormat": "GPU {{gpu}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "min": 0, "max": 250,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 150 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean","lastNotNull","max"] }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "GPU Temperatura [°C]",
      "type": "timeseries",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "targets": [
        { "expr": "DCGM_FI_DEV_GPU_TEMP{gpu=~\"$gpu\"}", "legendFormat": "GPU {{gpu}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 30, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 65 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean","lastNotNull","max"] }, "tooltip": { "mode": "multi" } }
    }
  ]
}
