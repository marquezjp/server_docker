{
  "title": "UPS APC - MRQZ",
  "uid": "ups-apcupsd-mrqz",
  "tags": ["UPS", "APCUPSD", "Prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "style": "dark",
  "editable": true,
  "refresh": "10s",
  "description": "Painel de Métricas do UPS APC",

  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],

  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },

  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s", "10s", "15s", "30s", "1m", "5m"] },

  "panels": [
    {
      "title": "UPS Status",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "max by (status) (apcupsd_ups_status == 1)", "legendFormat": "{{status}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "ONLINE" } } },
            { "type": "value", "options": { "0": { "text": "" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red" },
              { "color": "green", "value": 0.5 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "name",
        "graphMode": "none"
      }
    },

    {
      "title": "Carga do UPS [%]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_ups_load_percent", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },

    {
      "title": "Autonomia [min]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_battery_time_left_seconds / 60", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "m",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red" },
              { "color": "orange", "value": 10 },
              { "color": "green", "value": 20 }
            ]
          }
        }
      }
    },

    {
      "title": "Bateria [%]",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_battery_charge_percent", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red" },
              { "color": "orange", "value": 25 },
              { "color": "green", "value": 50 }
            ]
          }
        }
      }
    },

    {
      "title": "Carga do UPS [%]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_ups_load_percent", "legendFormat": "Carga do UPS", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "Autonomia [min]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_battery_time_left_seconds", "legendFormat": "Autonomia", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "Transições de Status",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_ups_status{status=\"ONLINE\"}",      "legendFormat": "ONLINE",      "refId": "A" },
        { "expr": "apcupsd_ups_status{status=\"ONBATT\"}",      "legendFormat": "ONBATT",      "refId": "B" },
        { "expr": "apcupsd_ups_status{status=\"LOWBATT\"}",     "legendFormat": "LOWBATT",     "refId": "C" },
        { "expr": "apcupsd_ups_status{status=\"OVERLOAD\"}",    "legendFormat": "OVERLOAD",    "refId": "D" },
        { "expr": "apcupsd_ups_status{status=\"REPLACEBATT\"}", "legendFormat": "REPLACEBATT", "refId": "E" },
        { "expr": "apcupsd_ups_status{status=\"NOBATT\"}",      "legendFormat": "NOBATT",      "refId": "F" }
      ],
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "Tensão de entrada [V]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_line_nominal_volts", "legendFormat": "nominal", "refId": "A" },
        { "expr": "apcupsd_line_volts", "legendFormat": "atual", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "volt" } },
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "Tensão da bateria [V]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_battery_nominal_volts", "legendFormat": "nominal", "refId": "A" },
        { "expr": "apcupsd_battery_volts", "legendFormat": "atual", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "volt" } },
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "multi" } }
    },

    {
      "title": "Bateria [%]",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "expr": "apcupsd_battery_charge_percent", "legendFormat": "Bateria", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "multi" } }
    }
  ]
}
